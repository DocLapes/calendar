<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
    <FlexboxLayout class="body">
        <DatePicker id="dateSwitcher"
                year="{{ currentYear }}"
                month="{{ currentMonth }}"
                day="{{ currentDay }}"
        />
        <FlexboxLayout class="control-panel">
            <Button text="Отмена" class="discardChanges" tap="{{ gotoPreviousPage }}" />
            <Button text="Готово" class="saveChanges" tap="{{ saveSelectedDate }}"/>
        </FlexboxLayout>
    </FlexboxLayout>
</Page>

